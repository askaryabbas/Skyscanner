<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bpk="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Main Flight Card -->
    <net.skyscanner.backpack.card.BpkCardView
        android:id="@+id/flightCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        bpk:cornerStyle="large"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Flight number -->
            <net.skyscanner.backpack.text.BpkText
                android:id="@+id/flightNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flight_scy1234"
                style="@style/bpkTextHeading2" />

            <!-- Horizontal row for departure and arrival -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:weightSum="2">

                <!-- Departure card (left) -->
                <net.skyscanner.backpack.card.BpkCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    bpk:cornerStyle="small"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <net.skyscanner.backpack.text.BpkText
                            android:id="@+id/departureCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/from"
                            style="@style/bpkTextHeading1" />

                        <net.skyscanner.backpack.text.BpkText
                            android:id="@+id/departureTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/departure_time"
                            style="@style/bpkTextBodyDefault" />
                    </LinearLayout>
                </net.skyscanner.backpack.card.BpkCardView>

                <!-- Arrival card (right) -->
                <net.skyscanner.backpack.card.BpkCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    bpk:cornerStyle="small"
                    android:padding="12dp"
                    android:layout_marginStart="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <net.skyscanner.backpack.text.BpkText
                            android:id="@+id/arrivalCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/to"
                            style="@style/bpkTextHeading1" />

                        <net.skyscanner.backpack.text.BpkText
                            android:id="@+id/arrivalTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/arrival_time"
                            style="@style/bpkTextBodyDefault" />
                    </LinearLayout>
                </net.skyscanner.backpack.card.BpkCardView>

            </LinearLayout>
        </LinearLayout>
    </net.skyscanner.backpack.card.BpkCardView>

</androidx.constraintlayout.widget.ConstraintLayout>